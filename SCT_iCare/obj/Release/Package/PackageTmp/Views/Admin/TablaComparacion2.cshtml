        fecha1 = Convert.ToDateTime(ViewBag.FechaFinal);
        fechaPlan = fecha1;
    }

    DateTime fecha3 = fecha.AddMonths(-1);
    DateTime fecha4 = fechaPlan.AddMonths(-1);


